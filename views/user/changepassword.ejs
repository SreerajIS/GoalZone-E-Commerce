<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100">
      <div class="login100-pic js-tilt" data-tilt>
        <img src="/login/assets/images/img-01.png" alt="IMG">
      </div>

      
      
      <form onsubmit="return changePassword()" name="password-form" action="/changepassword/<%= number %>" method="post" class="login100-form validate-form">
        <span class="login100-form-title">
          Change Password
        </span>


        <div class="wrap-input100 validate-input" data-validate = "Password is required">
          <input class="input100" type="password" name="password" placeholder="Password">
          <span class="focus-input100"></span>
          <span class="symbol-input100">
            <i class="fa fa-lock" aria-hidden="true"></i>
          </span>
          <span id="passwordError" class="error-message"></span>
        </div>
        <div class="wrap-input100 validate-input" data-validate = "Password is required">
          <input class="input100" type="password" name="cpassword" placeholder="Confirm Password">
          <span class="focus-input100"></span>
          <span class="symbol-input100">
            <i class="fa fa-lock" aria-hidden="true"></i>
          </span>
          <span id="cpasswordError" class="error-message"></span>
        </div>
        
        <div class="container-login100-form-btn">
          <button type="submit" class="login100-form-btn">
            Change Password
          </button>
        </div>

        <div class="text-center p-t-12">
          <a class="txt2" href="/">
            Home
          </a>
        </div>

        <div class="text-center p-t-136">
          <a class="txt2" href="/signup">
            Create New Account
            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
          </a>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  function changePassword(){
    var password = document.forms["password-form"]["password"].value
    var cpassword = document.forms["password-form"]["cpassword"].value

    var passwordError = document.getElementById("passwordError")
    var cpasswordError = document.getElementById("cpasswordError")

    passwordError.textContent = ""
    cpasswordError.textContent = ""

    var isValid=true
    if(password == ""){
      passwordError.textContent = "Password must be filled"
      isValid  = false
    }
    else if(password.length<8){
      passwordError.textContent = "Password must be 8 characters"
      isValid = false
    }
    if(cpassword == ""){
      cpasswordError.textContent = "You must confirm your password"
      isValid = false
    }
    else if(cpassword !=password){
      cpasswordError.textContent = "Password did not match"
      isValid = false
    }
    return isValid


  }
</script>